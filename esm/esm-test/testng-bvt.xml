<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Service Manager Build Verification Test" thread-count="10" parallel="tests">
    <!--
      These Listeners are registered in the pom file - so we don't need them here
      Having ScreenCaptureListener registered twice was causing the report to have
      two screen shots in the report.
    -->

    <!--
      <listeners>
          <listener class-name="org.uncommons.reportng.HTMLReporter"/>
          <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
          <listener class-name="com.edifecs.test.common.ScreenCaptureListener"/>
      </listeners>
    -->


    <parameter name="SYSTEMUNDERTEST" value="http://smbox:8080"/>
    <parameter name = "GRIDHOST" value = "10.30.50.22"/>
    <!--
      <parameter name = "GRIDHOST" value = "standalone"/>
    -->
    <parameter name = "PLATFORM" value = "WINDOWS"/>

    <test name="Firefox v28">
        <parameter name = "BROWSER"  value = "firefox"/>
        <parameter name = "VERSION"  value = "28"/>
        <classes>
            <class name="com.edifecs.esm.test.BVT.EndToEndUserTest"/>
        </classes>
    </test>

    <test name="Firefox v30">
        <parameter name = "BROWSER"  value = "firefox"/>
        <parameter name = "VERSION"  value = "30"/>
        <classes>
            <class name="com.edifecs.esm.test.BVT.EndToEndUserTest"/>
        </classes>
    </test>
    <test name="Chrome 35">
        <parameter name = "BROWSER"  value = "chrome"/>
        <parameter name = "VERSION"  value = "35"/>
        <classes>
            <class name="com.edifecs.esm.test.BVT.EndToEndUserTest"/>
        </classes>
    </test>

    <test name="IE 10">
        <parameter name = "BROWSER"  value = "iexplorer"/>
        <parameter name = "VERSION"  value = "10"/>
        <classes>
            <class name="com.edifecs.esm.test.BVT.EndToEndUserTest"/>
        </classes>
    </test>

    <test name="IE 11">
        <parameter name = "BROWSER"  value = "iexplorer"/>
        <parameter name = "VERSION"  value = "11"/>
        <classes>
            <class name="com.edifecs.esm.test.BVT.EndToEndUserTest"/>
        </classes>
    </test>

</suite>