<DeploymentConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                         xsi:noNamespaceSchemaLocation="Configuration.xsd">

    <Cluster>
        <Server>
            <Name>default</Name>
            <IPAddress>127.0.0.1</IPAddress>
            <HostName>localhost</HostName>
            <Node>
                <Name>HelloExampleNode</Name>

                <Service>
                    <Name>hello-example-service-1</Name>
                    <ServiceType>hello-example-service</ServiceType>
                    <Version>1.0.0.0</Version>
                    <Property>
                        <Name>name</Name>
                        <Value>John Smith</Value>
                    </Property>
                </Service>
            </Node>
        </Server>
    </Cluster>

</DeploymentConfiguration>
