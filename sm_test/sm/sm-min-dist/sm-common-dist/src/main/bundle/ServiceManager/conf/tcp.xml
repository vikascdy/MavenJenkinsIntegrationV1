<config xmlns="urn:org:jgroups" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:org:jgroups http://www.jgroups.org/schema/JGroups-3.2.xsd">

    <TCP bind_port="7800"
        recv_buf_size="20M"
        send_buf_size="640K"
        sock_conn_timeout="5000"
        use_send_queues="true"
        tcp_nodelay="true"
        enable_bundling="false"
        enable_diagnostics="false"
        thread_pool.enabled="true"
        thread_pool.min_threads="4"
        thread_pool.max_threads="100"
        thread_pool.keep_alive_time="5000"
        thread_pool.queue_enabled="false"
        thread_pool.queue_max_size="10000"
        thread_pool.rejection_policy="discard"
        oob_thread_pool.enabled="true"
        oob_thread_pool.min_threads="1"
        oob_thread_pool.max_threads="16"
        oob_thread_pool.keep_alive_time="5000"
        oob_thread_pool.queue_enabled="false"
        oob_thread_pool.queue_max_size="100"
        oob_thread_pool.rejection_policy="Run"
    />
    
    <!-- This will be used as the default settings when TCP based auto discovery is selected. If not this will not be used. -->
    <TCPPING timeout="3000"
        initial_hosts="${jgroups.tcpping.initial_hosts:localhost[7800]}"
        port_range="150" num_initial_members="1"  />
    
    <!-- This will be used as the default settings when UDP based auto discovery is selected. If not this will not be used. -->    
    <MPING 
        timeout="2000"
        num_initial_members="1"
        mcast_port="${jgroups.udp.mcast_port:45588}"
        ip_ttl="${jgroups.udp.ip_ttl:8}"
        level="ERROR"
    />

    <MERGE2 min_interval="10000" max_interval="30000"  />
    
    <FD_SOCK  />
    <FD timeout="6000" max_tries="3" />
    <VERIFY_SUSPECT timeout="1500" />
    
    <pbcast.NAKACK2 use_mcast_xmit="false" 
        discard_delivered_msgs="true" />
        
    <pbcast.STABLE stability_delay="1000" desired_avg_gossip="20000"
        max_bytes="4M" />
        
    <pbcast.GMS print_local_addr="true" join_timeout="3000"
        view_bundling="true" />
        
    <MFC max_credits="2M" min_threshold="0.4" />
    
    <FRAG2 frag_size="60K" />
    <!--RSVP resend_interval="2000" timeout="10000"/ -->
    <pbcast.STATE_TRANSFER />

</config>