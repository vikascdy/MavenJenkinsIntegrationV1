<DeploymentConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="Configuration.xsd">

	<Cluster>
		<Server>
			<Node>
				<Name>Core</Name>
				<LogLevel>WARNING</LogLevel>

				<JVMOptions>
					<Property>
						<Value>-Xms1024M</Value>
					</Property>
					<Property>
						<Value>-Xmx1024M</Value>
					</Property>
				</JVMOptions>

				<!-- Spray Service -->
				<Service>
					<Name>spray-service</Name>
					<ServiceType>spray-service</ServiceType>
					<Description>Spray HTTP Service</Description>
					<LogLevel>INFO</LogLevel>
					<Version>1.0</Version>
					<Property>
						<Name>http.port</Name>
						<Value>8080</Value>
					</Property>
				</Service>

				<!-- xboard Portal Service -->
				<Service>
					<Name>xboard-portal-service</Name>
					<ServiceType>xboard-portal-service</ServiceType>
					<Description>Navigation Menu Service</Description>
					<LogLevel>DEBUG</LogLevel>
					<Version>1.0</Version>
				</Service>

				<!-- esm-service -->
				<Service>
					<Name>esm-service</Name>
					<ServiceType>esm-service</ServiceType>
					<Description>esm-service</Description>
					<LogLevel>WARNING</LogLevel>
					<Version>1.0</Version>
					<Property>
						<Name>password.max.attempts</Name>
						<Value>5</Value>
					</Property>
					<Property>
						<Name>password.reset.lockout.interval</Name>
						<Value>5</Value>
					</Property>
					<Property>
						<Name>password.reset.login</Name>
						<Value>false</Value>
					</Property>
					<Property>
						<Name>password.lockout.duration</Name>
						<Value>15</Value>
					</Property>
					<Property>
						<Name>password.history</Name>
						<Value>3</Value>
					</Property>
					<Property>
						<Name>password.age</Name>
						<Value>120</Value>
					</Property>
					<Property>
						<Name>password.regex</Name>
						<Value>^([a-zA-Z0-9@*#]{8,15})$</Value>
					</Property>
                    <Property>
                        <Name>password.regex.name</Name>
                        <Value>Default Password Regex</Value>
                    </Property>
					<Property>
						<Name>password.regex.description</Name>
						<Value>Password matching expression. Match all alphanumeric character and predefined wild characters. Password must consists of at least 8 characters and not more than 15 characters</Value>
					</Property>
					<Resource>
						<Name>Persisted H2 DB</Name>
						<TypeName>Security Database</TypeName>
					</Resource>
				</Service>

				<!-- Content Repository -->
				<Service>
					<Name>content-repository-service</Name>
					<ServiceType>content-repository-service</ServiceType>
					<Description>Content Repository Service</Description>
					<LogLevel>WARNING</LogLevel>
					<Version>1.0</Version>
				</Service>

                <!-- Flex Fields Service -->
                <Service>
                    <Name>flexfields-service</Name>
                    <ServiceType>flexfields-service</ServiceType>
                    <Description>flexfields-service</Description>
                    <LogLevel>WARNING</LogLevel>
                    <Version>1.0.0.0</Version>
                    <Resource>
                        <Name>FlexField Database</Name>
                        <TypeName>FlexField Database</TypeName>
                    </Resource>
                </Service>
			</Node>
		</Server>
		<Resource>
			<Description></Description>
			<Name>In Memory H2 DB</Name>
			<Property>
				<Name>URL</Name>
				<Value>jdbc:h2:mem:securityDB</Value>
			</Property>
			<Property>
				<Name>Driver</Name>
				<Value>org.h2.Driver</Value>
			</Property>
			<Property>
				<Name>Dialect</Name>
				<Value>org.hibernate.dialect.H2Dialect</Value>
			</Property>
			<Property>
				<Name>Username</Name>
				<Value>sa</Value>
			</Property>
			<Property>
				<Name>Password</Name>
				<Value></Value>
			</Property>
			<Property>
				<Name>AutoCreate</Name>
				<Value>true</Value>
			</Property>
			<Type>JDBC Database</Type>
		</Resource>
		<Resource>
			<Description></Description>
			<Name>Persisted H2 DB</Name>
			<Property>
				<Name>URL</Name>
				<Value>jdbc:h2:file:securityDB</Value>
			</Property>
			<Property>
				<Name>Driver</Name>
				<Value>org.h2.Driver</Value>
			</Property>
			<Property>
				<Name>Dialect</Name>
				<Value>org.hibernate.dialect.H2Dialect</Value>
			</Property>
			<Property>
				<Name>Username</Name>
				<Value>sa</Value>
			</Property>
			<Property>
				<Name>Password</Name>
				<Value></Value>
			</Property>
			<Property>
				<Name>AutoCreate</Name>
				<Value>true</Value>
			</Property>
			<Type>JDBC Database</Type>
		</Resource>
        <!-- FlexField DB -->
        <Resource>
            <Description></Description>
            <Name>FlexField Database</Name>
            <Property>
                <Name>URL</Name>
                <Value>jdbc:h2:file:FlexFieldDB</Value>
            </Property>
            <Property>
                <Name>Driver</Name>
                <Value>org.h2.Driver</Value>
            </Property>
            <Property>
                <Name>Dialect</Name>
                <Value>org.hibernate.dialect.H2Dialect</Value>
            </Property>
            <Property>
                <Name>Username</Name>
                <Value>sa</Value>
            </Property>
            <Property>
                <Name>Password</Name>
                <Value></Value>
            </Property>
            <Property>
                <Name>AutoCreate</Name>
                <Value>true</Value>
            </Property>
            <Type>JDBC Database</Type>
        </Resource>

        <Resource>
            <Description></Description>
            <Name>FlexFields Persisted MySQL</Name>
            <Property>
                <Name>URL</Name>
                <Value>jdbc:mysql://smbox:3306/flexfields</Value>
            </Property>
            <Property>
                <Name>Driver</Name>
                <Value>com.mysql.jdbc.Driver</Value>
            </Property>
            <Property>
                <Name>Dialect</Name>
                <Value>org.hibernate.dialect.MySQLDialect</Value>
            </Property>
            <Property>
                <Name>Username</Name>
                <Value>sm</Value>
            </Property>
            <Property>
                <Name>Password</Name>
                <Value>welcome</Value>
            </Property>
            <Property>
                <Name>AutoCreate</Name>
                <Value>true</Value>
            </Property>
            <Type>JDBC Database</Type>
        </Resource>

	</Cluster>
</DeploymentConfiguration>
