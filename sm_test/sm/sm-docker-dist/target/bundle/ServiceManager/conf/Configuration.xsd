<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="DeploymentConfiguration" type="deploymentConfiguration" />

	<xs:element name="Cluster" type="cluster" />

	<xs:element name="JVMOptions" type="jvmOptions" />

	<xs:element name="Node" type="node" />

	<xs:element name="Product" type="product" />

	<xs:element name="Property" type="property" />

	<xs:element name="Resource" type="resourceReference" />

	<xs:element name="Server" type="server" />

	<xs:element name="Service" nillable="true" type="xs:anyType" />

	<xs:complexType name="cluster">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element name="EnvironmentType" type="xs:string"
				minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />

			<xs:element ref="Product" minOccurs="0" maxOccurs="unbounded" />
			<xs:element name="Resource" type="resource" minOccurs="0"
				maxOccurs="unbounded" />
			<xs:element ref="Server" minOccurs="0" maxOccurs="unbounded" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="product">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="Version" type="xs:string" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="resource">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element ref="Property" minOccurs="0" maxOccurs="unbounded" />
			<xs:element name="Type" type="xs:string" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="property">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="Value" type="xs:string" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="server">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element name="HostName" type="xs:string" minOccurs="0" />
			<xs:element name="IPAddress" type="xs:string" minOccurs="0" />
			<xs:element name="MessagePort" type="xs:int" minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="LogLevel" type="logLevel" minOccurs="0" />
			<xs:element ref="Node" minOccurs="0" maxOccurs="unbounded" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="node">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="CommunicationPort" type="xs:int"
				minOccurs="0" />
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element ref="JVMOptions" minOccurs="0" />
			<xs:element name="MessagePort" type="xs:int" minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="Role" type="xs:string" minOccurs="0" />
			<xs:element ref="Service" minOccurs="0" maxOccurs="unbounded" />
			<xs:element name="SSHPort" type="xs:int" minOccurs="0" />
			<xs:element name="LogLevel" type="logLevel" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="jvmOptions">
		<xs:choice maxOccurs="unbounded">
			<xs:element ref="Property" minOccurs="0" maxOccurs="unbounded" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="service">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element name="LogLevel" type="logLevel" minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element ref="Property" minOccurs="0" maxOccurs="unbounded" />
			<xs:element ref="Resource" minOccurs="0" maxOccurs="unbounded" />
			<xs:element name="ServiceType" type="xs:string" minOccurs="0" />
			<xs:element ref="Service" minOccurs="0" maxOccurs="unbounded" />
			<xs:element name="Version" type="xs:string" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="resourceReference">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="TypeName" type="xs:string" minOccurs="0" />
			<xs:element ref="Property" minOccurs="0" maxOccurs="unbounded" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="serviceReference">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="TypeName" type="xs:string" minOccurs="0" />
		</xs:choice>
	</xs:complexType>

	<xs:complexType name="dateAdapter">
		<xs:complexContent>
			<xs:extension base="xmlAdapter">
				<xs:sequence />
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="xmlAdapter" abstract="true">
		<xs:sequence />
	</xs:complexType>

	<xs:complexType name="deploymentConfiguration">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="CreatedDate" type="xs:string" minOccurs="0" />
			<xs:element name="Description" type="xs:string" minOccurs="0" />
			<xs:element name="Name" type="xs:string" minOccurs="0" />
			<xs:element name="Version" type="xs:string" minOccurs="0" />
			<xs:element name="MetadataVersion" type="xs:string"
				minOccurs="0" />
			<xs:element ref="Cluster" minOccurs="0" maxOccurs="unbounded" />
		</xs:choice>
	</xs:complexType>

	<xs:simpleType name="logLevel">
		<xs:restriction base="xs:string">
			<xs:enumeration value="FATAL" />
			<xs:enumeration value="DEBUG" />
			<xs:enumeration value="ERROR" />
			<xs:enumeration value="WARNING" />
			<xs:enumeration value="INFO" />
		</xs:restriction>
	</xs:simpleType>


	<xs:simpleType name="resourceType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="Database" />
			<xs:enumeration value="JMSQueue" />
			<xs:enumeration value="EmailServer" />
			<xs:enumeration value="ApplicationServer" />
			<xs:enumeration value="SharedFolder" />
			<xs:enumeration value="Artifact" />
		</xs:restriction>
	</xs:simpleType>
</xs:schema>

